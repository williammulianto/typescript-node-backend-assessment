{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "baseUrl": "./",
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "paths": {
      "utils/*": ["src/utils/*"],
      "entities/*": ["src/entities/*"],
      "modules/*": ["src/modules/*"],
      "middlewares/*": ["src/middlewares/*"],
      "jobs/*": ["src/jobs/*"]
    }
  },
  "include": ["src/**/*"]
}
