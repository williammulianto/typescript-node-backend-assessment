{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "baseUrl": "src",
    "noImplicitAny": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "paths": {
      "utils/*": ["utils/*"],
      "entities/*": ["entities/*"],
      "modules/*": ["modules/*"]
    }
  },
  "include": ["src/**/*"]
}
